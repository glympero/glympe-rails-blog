<h1 align="center">All users</h1>

<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
  <ul class="users-listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        <li><% if logged_in? && current_user.admin? %>
          <div class="article-actions">

          <%= link_to 'Delete User', user_path(user),
                                        method: :delete,
                                        data: {confirm: "Are you sure you want to delete this user"},
                                        class:"btn btn-xs btn-danger" %>
        </div>
        <% end %></li>
      </div>
    </div>

  </ul>

  <% end %>
  <%= will_paginate %>
</div>
